<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/lineTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/form_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/bg_shadow_item_home"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp15"
        android:paddingTop="@dimen/dp15"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgChatAvatar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:padding="@dimen/dp3"
                tools:src="@drawable/default_user_avatar" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtReceiverName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_weight="9.5"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="16sp"
                    tools:text="@string/placeHolderText" />


            </LinearLayout>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/placeHolderText"
                android:textColor="#606060"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/txtLastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/placeHolderText"
                android:textColor="#606060"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtLastTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/placeHolderText"
                android:textColor="@color/black_54"
                android:textSize="11sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
